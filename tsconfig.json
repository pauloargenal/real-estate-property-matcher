{
    "compilerOptions": {
      // Shared
      "target": "ESNext",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
      ],
      "module": "ESNext",
      "skipLibCheck": true,
      "isolatedModules": true,
      // Next.js
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
        {
          "name": "next"
        }
      ],
      "allowJs": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
  